<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">
        <class>model.Student</class>
        <class>model.Clazz</class>

        <properties>
            <!-- URL kết nối MariaDB -->
            <property name="hibernate.connection.url" value="jdbc:mariadb://localhost:3306/quanlybanvetaugaLacHong"/>

            <!-- Driver cho MariaDB -->
            <property name="hibernate.connection.driver_class" value="org.mariadb.jdbc.Driver"/>

            <!-- Hiển thị câu truy vấn SQL -->
            <property name="hibernate.jdbc.show_sql" value="true"/>

            <!-- Thông tin đăng nhập -->
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="root"/>

            <!-- Hibernate Dialect cho MariaDB -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect"/>

            <!-- Tùy chọn -->
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
